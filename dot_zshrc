#
# Functions
#
keyadd() {
  KEY_PREFIX='_key-'
  ssh-add ~/.ssh/${KEY_PREFIX}${1}/id_rsa || ssh-add -L
}

osx() {
    [ $(uname) = 'Darwin' ]
}

linux() {
    [ $(uname) = 'Linux' ]
}

fixssh() {
  for key in SSH_AUTH_SOCK SSH_CONNECTION SSH_CLIENT; do
    if (tmux show-environment | grep "^${key}" > /dev/null); then
      value=`tmux show-environment | grep "^${key}" | sed -e "s/^[A-Z_]*=//"`
      export ${key}="${value}"
    fi
  done
}

rmtrailspaces() {
    sed -i 's/[[:space:]]\+$//' $1
}

